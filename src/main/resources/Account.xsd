<?xml version="1.0" encoding="UTF-8"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="com/majorczyk/soap/account" elementFormDefault="qualified"
           xmlns:tn="com/majorczyk/soap/account">

    <xs:element name="Login">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="login" type="xs:string"/>
                <xs:element name="password" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="LoginResponse">
        <xs:complexType>
            <xs:sequence>
                <!--<xs:element name="userId" type="xs:int"/>-->
                <xs:element name="token" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetUserAccountsRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="token" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetUserAccountsResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:sequence>
                    <xs:element maxOccurs="unbounded" name="account" type="tn:Account"/>
                </xs:sequence>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetAccountHistoryRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="token" type="xs:string"/>
                <xs:element name="accountNo" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetAccountHistoryResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="accountHistory" type="tn:AccountHistoryEntity"
                            maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="Deposit">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="operationPayload" type="tn:OperationPayload"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="DepositResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="response" type="tn:OperationResponse"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="Payment">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="operationPayload" type="tn:OperationPayload"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="PaymentResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="response" type="tn:OperationResponse"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="Withdrawal">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="operationPayload" type="tn:OperationPayload"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="WithdrawalResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="response" type="tn:OperationResponse"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="Transfer">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="accountFrom" type="xs:string"/>
                <xs:element name="accountTo" type="xs:string"/>
                <xs:element name="amount" type="xs:int"/>
                <xs:element name="title" type="xs:string"/>
                <xs:element name="name" type="xs:string"/>
                <xs:element name="token" type="xs:string"/>
                <xs:element name="interbank" type="xs:boolean"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="TransferResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="response" type="tn:OperationResponse"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>



